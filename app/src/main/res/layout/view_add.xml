<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView android:id="@+id/text_index"
        android:layout_width="@dimen/width_edit_text"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_index"
        android:layout_marginTop="@dimen/margin_index"
        android:textSize="@dimen/text_size"
        android:layout_marginRight="@dimen/margin_index_right">
    </TextView>
    <TextView android:id="@+id/text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size"
        android:layout_marginTop="@dimen/margin_index"
        android:layout_marginRight="@dimen/margin_index">
    </TextView>
</LinearLayout>